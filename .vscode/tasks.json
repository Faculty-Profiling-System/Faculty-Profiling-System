{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Auto Pull from Main",
      "type": "shell",
      "command": "git pull origin main",
      "problemMatcher": [],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "repeat": {
        "interval": 60000,  // Time in milliseconds (e.g., 60000 = 1 minute)
        "count": 0          // 0 = infinite repeats
      }
    }
  ]
}